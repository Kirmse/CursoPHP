algoritmo "Ex.27"

var

valor : inteiro

inicio

escreval("Seu numero é negativo ou positivo?")
escreva("digite aqui: ")
leia(valor)
se (valor = 0) entao
   escreval("Valor igual a zero.")
senao
   se (valor > 0) entao
      escreval("Seu valor é POSITIVO.")
   senao
      escreval("Seu valor é NEGATIVO.")
   fimse
fimse
fimalgoritmo
